name "inochi-viewer"
description "Basic Inochi2D Puppet viewer"
authors "Luna"
copyright "Copyright Â© 2021, Luna"
license "BSD 2-clause"

dependency "bindbc-glfw" version=">=0.13.0"
dependency "bindbc-opengl" version="*"
dependency "inochi2d" path="D:/Work/Inochi2D/inochi2d"

targetPath "out/"
copyFiles "libs/*" platform="windows"
versions "GL_45" "GL_ARB_framebuffer_sRGB"

dflags "-mcpu=native"

stringImportPaths "res/"

workingDirectory "out/"